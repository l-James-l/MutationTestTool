<UserControl x:Class="GUI.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views"
             xmlns:vm="clr-namespace:GUI.ViewModels.ElementViewModels"
             xmlns:views="clr-namespace:GUI.Views.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:StatusBarViewModel}">
            <views:StatusBarView/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <TextBlock FontWeight="SemiBold" FontSize="26">DashBoard</TextBlock>
        <ContentControl Content="{Binding StatusBarViewModel}" Margin="0,37,0,322" />
    </Grid>
</UserControl>
