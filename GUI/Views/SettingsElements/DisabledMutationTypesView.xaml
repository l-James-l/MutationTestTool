<UserControl x:Class="GUI.Views.SettingsElements.DisabledMutationTypesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.SettingsElements"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:GUI.ViewModels.SettingsElements"
             d:DataContext="{d:DesignInstance Type=vm:DisabledMutationTypesViewModel}">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="CategoryHeader">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="DescriptionStyle">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="MutationName">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </UserControl.Resources>
    
    <DataGrid ItemsSource="{Binding MutationCategories}"
              AutoGenerateColumns="False"
              Background="Transparent"
              RowBackground="Transparent"
              RowHeaderWidth="0"
              HeadersVisibility="None"
              BorderThickness="0"
              GridLinesVisibility="None"
              SelectionMode="Single">

        <DataGrid.Resources>
            <Style TargetType="DataGridRow">
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="DataGridCell">
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </DataGrid.Resources>
        
        <DataGrid.Columns>
            <DataGridTemplateColumn>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        
                        <Grid Margin="0,8" Background="#1f2939">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical">
                                <TextBlock Text="{Binding Name}" 
                                           Style="{StaticResource CategoryHeader}"/>
                                <TextBlock Text="{Binding Description}"
                                           Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="15,0">
                                <Button Command="{Binding EnableAllCommand}" Margin="5,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="15"
                                                    BorderBrush="LightGray"
                                                    BorderThickness="1"
                                                    Background="#3B82F6">
                                                <TextBlock Text="Enable All"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Padding="5,0"
                                                           Foreground="White"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Command="{Binding DisableAllCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="15"
                                                    BorderBrush="LightGray"
                                                    BorderThickness="1"
                                                    Background="Red">
                                                <TextBlock Text="Disable All"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Padding="5,0"
                                                           Foreground="White"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                            
                            <ItemsControl Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Mutations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5,5">
                                            <CheckBox IsChecked="{Binding Enabled}" Margin="0,0,5,0" Style="{StaticResource SwitchStyle}"/>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Name}"
                                                           Style="{StaticResource MutationName}"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Style="{StaticResource DescriptionStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
