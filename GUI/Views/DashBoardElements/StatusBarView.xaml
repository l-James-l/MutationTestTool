<UserControl x:Class="GUI.Views.DashBoardElements.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.DashBoardElements"
             mc:Ignorable="d" 
             xmlns:cv="clr-namespace:GUI.Converters"
             xmlns:vm="clr-namespace:GUI.ViewModels.DashBoardElements"
             d:DataContext="{d:DesignInstance Type=vm:StatusBarViewModel}" Height="Auto">

    <UserControl.Resources>
        <cv:HalfColumnMarginConverter x:Key="HalfColumnMarginConverter"/>
        <cv:ProssesStateColourConverter x:Key="ProssesStateColourConverter"/>
        <cv:CompletionPercentageToWidthConverter x:Key="CompletionPercentageToWidthConverter"/>
        <cv:StatusCircleTagConverter x:Key="StatusCircleTagConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Columns for each of the 6 viewable stages -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            
            <!-- Stage Circle -->
            <Style x:Key="StageCircleStyle" TargetType="Border">
                <Setter Property="Width" Value="25"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <Binding Converter="{StaticResource ProssesStateColourConverter}" />
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="StageCircleText" TargetType="TextBlock">
                <Setter Property="Text">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource StatusCircleTagConverter}">
                            <Binding Path="Tag" RelativeSource="{RelativeSource self}"/>
                            <Binding/>
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style x:Key="StageLabel" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="MaxWidth" Value="120"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </Grid.Resources>

        <!-- Progress bar layer -->
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="6"
              ClipToBounds="True">

            <!-- Gray baseline -->
            <Border Name="GrayBaseline"
                    Height="2"
                    Background="SlateGray"
                    VerticalAlignment="Center"
                    Margin="{Binding ActualWidth,
                            RelativeSource={RelativeSource AncestorType=Grid},
                            Converter={StaticResource HalfColumnMarginConverter}}"/>

            <!-- Green progress -->
            <Border Height="2"
                    Background="#22C55E"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="{Binding ActualWidth,
                            RelativeSource={RelativeSource AncestorType=Grid},
                            Converter={StaticResource HalfColumnMarginConverter}}">
                <Border.Width>
                    <MultiBinding Converter="{StaticResource CompletionPercentageToWidthConverter}">
                        <!-- Grid width -->
                        <Binding ElementName="GrayBaseline" Path="ActualWidth" />

                        <!-- Percentage from VM -->
                        <Binding Path="ProgressBarPercentage" />
                    </MultiBinding>
                </Border.Width>
            </Border>
        </Grid>

        <!-- STAGE 1: Load sln-->
        <Border Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource StageCircleStyle}"
                DataContext="{Binding LoadSolutionState}">
            <TextBlock Style="{StaticResource StageCircleText}" Tag="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Solution loaded"
                   Style="{DynamicResource StageLabel}"/>

        <!-- STAGE 2 - build sln-->
        <Border Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource StageCircleStyle}"
                DataContext="{Binding BuildOperationState}">
            <TextBlock Style="{StaticResource StageCircleText}" Tag="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Text="Solution built"
                   Style="{DynamicResource StageLabel}"/>

        <!-- STAGE 3 - initial unmutated test -->
        <Border Grid.Row="0"
                Grid.Column="2"
                Style="{StaticResource StageCircleStyle}"
                DataContext="{Binding InitialTestRunState}">
            <TextBlock Style="{StaticResource StageCircleText}" Tag="3" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.Column="2"
                   Text="Unmutated Testing"
                   Style="{DynamicResource StageLabel}"/>

        <!-- STAGE 4 - mutant discovery -->
        <Border Grid.Row="0"
                Grid.Column="3"
                Style="{StaticResource StageCircleStyle}"
                DataContext="{Binding MutantDiscoveryState}">
            <TextBlock Style="{StaticResource StageCircleText}" Tag="4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.Column="3"
                   Text="Discovering Mutants"
                   Style="{DynamicResource StageLabel}"/>

        <!-- STAGE 5 - mutated sln building -->
        <Border Grid.Row="0"
                Grid.Column="4"
                Style="{StaticResource StageCircleStyle}"
                DataContext="{Binding BuildingMutatedSolutionState}">
            <TextBlock Style="{StaticResource StageCircleText}" Tag="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.Column="4"
                   Text="Building Mutated Solution"
                   Style="{DynamicResource StageLabel}"/>

        <!-- STAGE 6 - testing mutants -->
        <Border Grid.Row="0"
                Grid.Column="5"
                Style="{StaticResource StageCircleStyle}"
                DataContext="{Binding TestingMutantsState}">
            <TextBlock Style="{StaticResource StageCircleText}" Tag="6" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.Column="5"
                   Text="Testing Mutants"
                   Style="{DynamicResource StageLabel}"/>

    </Grid>
</UserControl>
