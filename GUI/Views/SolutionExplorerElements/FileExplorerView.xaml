<UserControl x:Class="GUI.Views.SolutionExplorerElements.FileExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.SolutionExplorerElements"
             xmlns:vm="clr-namespace:GUI.ViewModels.SolutionExplorerElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <TreeView ItemsSource="{Binding SolutionTree}">
        
        <TreeView.ItemContainerStyle>
            <Style TargetType="TreeViewItem">
                <!--Set the IsSelectedProerty of the leaf nodes when clicked-->
                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>

                <!-- default colours -->
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="Black"/>

                <Style.Triggers>
                    <!-- hover -->
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="LightGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </TreeView.ItemContainerStyle>
        
        <TreeView.Resources>
            <!-- Project template -->
            <HierarchicalDataTemplate DataType="{x:Type vm:ProjectNode}" ItemsSource="{Binding Children}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚙️" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Name}"/>
                </StackPanel>
            </HierarchicalDataTemplate>

            <!-- Folder template -->
            <HierarchicalDataTemplate DataType="{x:Type vm:FolderNode}" ItemsSource="{Binding Children}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📁" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Name}"/>
                </StackPanel>
            </HierarchicalDataTemplate>

            <!-- File template -->
            <DataTemplate DataType="{x:Type vm:FileNode}">
                <StackPanel Style="{DynamicResource OnSelectedBehaviour}" Orientation="Horizontal">
                    <TextBlock Text="📄" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Name}"/>
                </StackPanel>
            </DataTemplate>
        </TreeView.Resources>
    </TreeView>

</UserControl>
