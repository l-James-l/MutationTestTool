<UserControl x:Class="GUI.Views.Elements.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.Elements"
             mc:Ignorable="d" 
             xmlns:cv="clr-namespace:GUI.Converters"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <cv:HalfColumnMarginConverter x:Key="HalfColumnMarginConverter"/>
    </UserControl.Resources>

    <Grid Margin="20,85,20,301">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fixed stage geometry -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <!-- Stage Circle -->
            <Style x:Key="StageCircleStyle" TargetType="Border">
                <Setter Property="Width" Value="18"/>
                <Setter Property="Height" Value="18"/>
                <Setter Property="CornerRadius" Value="9"/>
                <Setter Property="Background" Value="#9CA3AF"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>

                <Style.Triggers>
                    <DataTrigger Binding="{Binding}" Value="InProgress">
                        <Setter Property="Background" Value="#F59E0B"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding}" Value="Completed">
                        <Setter Property="Background" Value="#22C55E"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding}" Value="Failed">
                        <Setter Property="Background" Value="#EF4444"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <!-- LINE LAYER (center-to-center) -->
        <Grid Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            ClipToBounds="True">

            <!-- Gray baseline -->
            <Border Height="2"
                Background="#9CA3AF"
                VerticalAlignment="Center"
                Margin="{Binding ActualWidth,
                            RelativeSource={RelativeSource AncestorType=Grid},
                            Converter={StaticResource HalfColumnMarginConverter}}"/>

            <!-- Green progress -->
            <Border Height="2"
                Background="#22C55E"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="{Binding ActualWidth,
                            RelativeSource={RelativeSource AncestorType=Grid},
                            Converter={StaticResource HalfColumnMarginConverter}}"
                Width="{Binding ProgressWidth}"/>
        </Grid>

        <!-- STAGE 1 -->
        <Border Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource StageCircleStyle}"
            DataContext="{Binding SolutionLoadedStatus}"/>

        <TextBlock Grid.Row="1"
                Grid.Column="0"
                Text="Solution loaded"
                FontSize="11"
                TextAlignment="Center"
                HorizontalAlignment="Center"
                MaxWidth="120"
                TextWrapping="Wrap"/>

        <!-- STAGE 2 -->
        <Border Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource StageCircleStyle}"
            DataContext="{Binding SolutionBuiltStatus}"/>

        <TextBlock Grid.Row="1"
                Grid.Column="1"
                Text="Solution built"
                FontSize="11"
                TextAlignment="Center"
                HorizontalAlignment="Center"
                MaxWidth="120"
                TextWrapping="Wrap"/>

        <!-- STAGE 3 -->
        <Border Grid.Row="0"
            Grid.Column="2"
            Style="{StaticResource StageCircleStyle}"
            DataContext="{Binding UnmutatedTestingStatus}"/>

        <TextBlock Grid.Row="1"
                Grid.Column="2"
                Text="Unmutated Testing"
                FontSize="11"
                TextAlignment="Center"
                HorizontalAlignment="Center"
                MaxWidth="120"
                TextWrapping="Wrap"/>

        <!-- STAGE 4 -->
        <Border Grid.Row="0"
            Grid.Column="3"
            Style="{StaticResource StageCircleStyle}"
            DataContext="{Binding DiscoveringMutantsStatus}"/>

        <TextBlock Grid.Row="1"
                Grid.Column="3"
                Text="Discovering Mutants"
                FontSize="11"
                TextAlignment="Center"
                HorizontalAlignment="Center"
                MaxWidth="120"
                TextWrapping="Wrap"/>

        <!-- STAGE 5 -->
        <Border Grid.Row="0"
            Grid.Column="4"
            Style="{StaticResource StageCircleStyle}"
            DataContext="{Binding BuildingMutatedSolutionStatus}"/>

        <TextBlock Grid.Row="1"
                Grid.Column="4"
                Text="Building Mutated Solution"
                FontSize="11"
                TextAlignment="Center"
                HorizontalAlignment="Center"
                MaxWidth="140"
                TextWrapping="Wrap"/>

        <!-- STAGE 6 -->
        <Border Grid.Row="0"
            Grid.Column="5"
            Style="{StaticResource StageCircleStyle}"
            DataContext="{Binding TestingMutantsStatus}"/>

        <TextBlock Grid.Row="1"
        Grid.Column="5"
        Text="Testing Mutants"
        FontSize="11"
        TextAlignment="Center"
        HorizontalAlignment="Center"
        MaxWidth="120"
        TextWrapping="Wrap"/>

    </Grid>
</UserControl>
